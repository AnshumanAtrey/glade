{% comment %}
  Carousel Section - Editable product showcase with smooth transitions
{% endcomment %}

<section class="carousel-section" id="carousel-{{ section.id }}">
  <div class="carousel-container">
    <div class="carousel-header">
      <div class="carousel-header-left">
        <h2>{{ section.settings.carousel_title | default: 'FEATURED PRODUCTS' }}</h2>
        <p>{{ section.settings.carousel_subtitle | default: 'Discover our curated selection of premium pieces.' }}</p>
      </div>
      <div class="carousel-header-right">
        <div class="carousel-controls">
          <button class="carousel-btn carousel-prev" aria-label="Previous slide">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
            </svg>
          </button>
          <button class="carousel-btn carousel-next" aria-label="Next slide">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
            </svg>
          </button>
        </div>
        {% if section.settings.view_all_url != blank %}
          <a href="{{ section.settings.view_all_url }}" class="animated-btn">
            <span class="text">VIEW ALL</span>
            <span class="arrow-wrapper">
              <svg class="arrow arrow-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
              </svg>
              <svg class="arrow arrow-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
              </svg>
            </span>
          </a>
        {% endif %}
      </div>
    </div>

    <div class="carousel-wrapper">
      <div class="carousel-track" id="carousel-track-{{ section.id }}">
        {% comment %} Render latest products from all collections {% endcomment %}
        {% assign latest_products = collections.all.products | sort: 'created_at' | reverse %}
        {% if latest_products.size > 0 %}
          {% for product in latest_products limit: section.settings.products_limit %}
          <div class="carousel-slide" data-product-id="{{ product.id }}">
            <div class="carousel-product-card">
              <div class="carousel-product-image" 
                   style="background-image: url('{{ product.featured_image | image_url: width: 600 }}');"
                   data-hover-image="{% if product.images[1] %}{{ product.images[1] | image_url: width: 600 }}{% endif %}">
                {% if product.compare_at_price > product.price %}
                  <span class="product-tag">SALE</span>
                {% else %}
                  <span class="product-tag">LATEST</span>
                {% endif %}
                
                <div class="carousel-product-overlay">
                  <a href="{{ product.url }}" class="animated-btn">
                    <span class="text">SHOP NOW</span>
                    <span class="arrow-wrapper">
                      <svg class="arrow arrow-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
                      </svg>
                      <svg class="arrow arrow-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
                      </svg>
                    </span>
                  </a>
                </div>
              </div>
              
              <div class="carousel-product-info">
                <span class="product-category">{{ product.type | default: 'PRODUCT' | upcase }}</span>
                <h3 class="product-name">{{ product.title }}</h3>
                <div class="product-price">
                  {% if product.compare_at_price > product.price %}
                    <span class="price-sale">{{ product.price | money }}</span>
                    <span class="price-compare">{{ product.compare_at_price | money }}</span>
                  {% else %}
                    <span class="price-regular">{{ product.price | money }}</span>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
        {% else %}
          {% comment %} Fallback when no products exist {% endcomment %}
          {% for i in (1..6) %}
            <div class="carousel-slide">
              <div class="carousel-product-card">
                <div class="carousel-product-image" style="background: linear-gradient(135deg, #333 0%, #111 100%); display: flex; align-items: center; justify-content: center;">
                  <span style="color: #666; font-size: 14px; text-transform: uppercase;">Add Products</span>
                  <div class="carousel-product-overlay">
                    <a href="/admin/products" class="animated-btn">
                      <span class="text">ADD PRODUCTS</span>
                      <span class="arrow-wrapper">
                        <svg class="arrow arrow-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
                        </svg>
                        <svg class="arrow arrow-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
                        </svg>
                      </span>
                    </a>
                  </div>
                </div>
                
                <div class="carousel-product-info">
                  <span class="product-category">SAMPLE</span>
                  <h3 class="product-name">Sample Product {{ i }}</h3>
                  <div class="product-price">
                    <span class="price-regular">â‚¹2,250</span>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>

    <!-- Product data for JavaScript consumption -->
    <script id="carousel-products-json-{{ section.id }}" type="application/json">
      {
        "products": [
          {% for product in latest_products limit: section.settings.products_limit %}
            {
              "id": {{ product.id }},
              "title": {{ product.title | json }},
              "handle": {{ product.handle | json }},
              "price": {{ product.price | json }},
              "compare_at_price": {{ product.compare_at_price | json }},
              "url": {{ product.url | json }},
              "featured_image": {{ product.featured_image | image_url: width: 600 | json }},
              "images": [
                {% for image in product.images limit: 3 %}
                  {{ image | image_url: width: 600 | json }}{% unless forloop.last %},{% endunless %}
                {% endfor %}
              ],
              "type": {{ product.type | json }},
              "created_at": {{ product.created_at | json }}
            }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }
    </script>

    <div class="carousel-indicators">
      {% assign total_slides = section.settings.products_limit | default: 6 %}
      {% assign slides_per_view = 3 %}
      {% assign total_pages = total_slides | divided_by: slides_per_view | ceil %}
      
      {% for i in (1..total_pages) %}
        <button class="carousel-indicator {% if forloop.first %}active{% endif %}" 
                data-slide="{{ forloop.index0 | times: slides_per_view }}"
                aria-label="Go to slide group {{ forloop.index }}"></button>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Latest Products Carousel",
  "tag": "section",
  "class": "section-carousel",
  "settings": [
    {
      "type": "text",
      "id": "carousel_title",
      "label": "Section Title",
      "default": "LATEST PRODUCTS"
    },
    {
      "type": "textarea",
      "id": "carousel_subtitle",
      "label": "Section Subtitle",
      "default": "Discover our newest arrivals and latest drops."
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Number of products to show",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 8,
      "info": "Shows the most recently added products"
    },
    {
      "type": "url",
      "id": "view_all_url",
      "label": "View All Link",
      "default": "/collections/all"
    },
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "Enable Autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Autoplay Speed (seconds)",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5
    }
  ],
  "presets": [
    {
      "name": "Latest Products Carousel",
      "settings": {
        "carousel_title": "LATEST PRODUCTS",
        "carousel_subtitle": "Discover our newest arrivals and latest drops.",
        "products_limit": 8,
        "view_all_url": "/collections/all"
      }
    }
  ]
}
{% endschema %}