{{ 'header.css' | asset_url | stylesheet_tag }}
<script src="{{ 'header.js' | asset_url }}" defer></script>

<header class="main-header">
  <nav class="navbar">
    <!-- Mobile hamburger menu -->
    <div class="navbar-left">
      <button class="mobile-menu-toggle" id="mobile-menu-toggle">
        <svg
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>

      <!-- Desktop logo -->
      <a href="{{ routes.root_url }}" class="logo desktop-logo">
        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | image_url: width: 120 }}"
            alt="{{ shop.name }}"
            class="logo-image"
            width="120"
            height="40"
          >
        {% else %}
          <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" class="logo-image" width="120" height="40">
        {% endif %}
      </a>
    </div>

    <!-- Center section -->
    <div class="navbar-center">
      <!-- Mobile logo (center) -->
      <a href="{{ routes.root_url }}" class="logo mobile-logo">
        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | image_url: width: 80 }}"
            alt="{{ shop.name }}"
            class="logo-image"
            width="80"
            height="27"
          >
        {% else %}
          <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" class="logo-image" width="80" height="27">
        {% endif %}
      </a>

      <!-- Desktop promo text -->
      <div id="promo-text-container" class="desktop-promo">
        <span id="promo-text" class="promo-text-item">
          {{- section.settings.promo_text | default: 'FREE RETURNS WITHIN 30 DAYS' -}}
        </span>
      </div>
    </div>

    <div class="navbar-right">
      <!-- Desktop navigation -->
      <ul class="nav-menu desktop-nav">
        <li>
          <a href="{{ section.settings.shop_link | default: '/pages/shop-all' }}">
            {{- section.settings.shop_text | default: 'SHOP' -}}
          </a>
        </li>
        <li>
          <a href="{{ section.settings.about_link | default: '/pages/about' }}">
            {{- section.settings.about_text | default: 'ABOUT' -}}
          </a>
        </li>
        <li>
          <a href="{{ section.settings.contact_link | default: '/pages/contact' }}">
            {{- section.settings.contact_text | default: 'CONTACT' -}}
          </a>
        </li>
      </ul>

      <div class="nav-icons">
        <a href="{{ routes.account_url }}" class="icon-link">
          <svg
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </a>
        <a href="{{ routes.cart_url }}" class="icon-link cart">
          <svg
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <path d="M16 10a4 4 0 0 1-8 0"></path>
          </svg>
          <span class="cart-count" id="cart-count">{{ cart.item_count }}</span>
        </a>
      </div>
    </div>
  </nav>

  <!-- Mobile navigation menu -->
  <div class="mobile-nav" id="mobile-nav">
    <ul class="mobile-nav-menu">
      <li>
        <a href="{{ section.settings.shop_link | default: '/pages/shop-all' }}">
          {{- section.settings.shop_text | default: 'SHOP' -}}
        </a>
      </li>
      <li>
        <a href="{{ section.settings.about_link | default: '/pages/about' }}">
          {{- section.settings.about_text | default: 'ABOUT' -}}
        </a>
      </li>
      <li>
        <a href="{{ section.settings.contact_link | default: '/pages/contact' }}">
          {{- section.settings.contact_text | default: 'CONTACT' -}}
        </a>
      </li>
    </ul>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "promo_text",
      "label": "Promo Text",
      "default": "FREE RETURNS WITHIN 30 DAYS"
    },
    {
      "type": "text",
      "id": "shop_text",
      "label": "Shop Text",
      "default": "SHOP"
    },
    {
      "type": "url",
      "id": "shop_link",
      "label": "Shop Link",
      "info": "Links to the shop page showing all products"
    },
    {
      "type": "text",
      "id": "about_text",
      "label": "About Text",
      "default": "ABOUT"
    },
    {
      "type": "url",
      "id": "about_link",
      "label": "About Link"
    },
    {
      "type": "text",
      "id": "contact_text",
      "label": "Contact Text",
      "default": "CONTACT"
    },
    {
      "type": "url",
      "id": "contact_link",
      "label": "Contact Link"
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
