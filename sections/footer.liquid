{% comment %}
  Footer Section - Main site footer with banner, links, and newsletter signup
{% endcomment %}

<footer class="main-footer-section" id="footer-{{ section.id }}">
  <div
    class="footer-banner"
    {% if section.settings.banner_image != blank %}
      style="background-image: url('{{ section.settings.banner_image | image_url: width: 1600 }}');"
    {% else %}
      style="background-image: url('{{ 'IMG_7761-Enhanced-NR-min.jpg' | asset_url }}');"
    {% endif %}
  >
    <div class="footer-banner-text">
      <h2>
        <span>{{ section.settings.banner_text | default: 'MOVE YOUR WAY' }}</span>
      </h2>
    </div>
  </div>

  <div class="footer-links-container">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'footer_column' %}
          <div class="footer-column" {{ block.shopify_attributes }}>
            <h3 class="footer-category-title">{{ block.settings.column_title | default: 'COLUMN TITLE' }}</h3>
            <div class="footer-links-row">
              {% for i in (1..8) %}
                {% assign link_setting = 'link_' | append: i %}
                {% assign text_setting = 'link_text_' | append: i %}
                {% if block.settings[text_setting] != blank %}
                  {% if block.settings[link_setting] != blank %}
                    <a href="{{ block.settings[link_setting] }}" class="footer-link-tag">
                      <span>{{ block.settings[text_setting] }}</span>
                    </a>
                  {% else %}
                    <span class="footer-link-tag">
                      <span>{{ block.settings[text_setting] }}</span>
                    </span>
                  {% endif %}
                {% endif %}
              {% endfor %}
            </div>
          </div>
      {% endcase %}
    {% endfor %}

    {% comment %} Fallback content if no blocks are added {% endcomment %}
    {% if section.blocks.size == 0 %}
      <div class="footer-column">
        <h3 class="footer-category-title">SUPPORT</h3>
        <div class="footer-links-row">
          <a href="#" class="footer-link-tag"><span>MY ACCOUNT</span></a>
          <a href="#" class="footer-link-tag"><span>RETURNS & REFUNDS</span></a>
          <a href="#" class="footer-link-tag"><span>SHIPPING & DELIVERY</span></a>
        </div>
      </div>

      <div class="footer-column">
        <h3 class="footer-category-title">ABOUT</h3>
        <div class="footer-links-row">
          <a href="#" class="footer-link-tag"><span>ABOUT GLADE</span></a>
          <a href="#" class="footer-link-tag"><span>CONTACT</span></a>
        </div>
      </div>

      <div class="footer-column">
        <h3 class="footer-category-title">SOCIAL MEDIA</h3>
        <div class="footer-links-row">
          <a href="#" class="footer-link-tag"><span>INSTAGRAM</span></a>
          <a href="#" class="footer-link-tag"><span>X / TWITTER</span></a>
          <a href="#" class="footer-link-tag"><span>YOUTUBE</span></a>
        </div>
      </div>
    {% endif %}
  </div>

  <div class="footer-subscribe-section">
    <div class="subscribe-form-container">
      <form class="subscribe-form" action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data">
        <input
          type="email"
          name="contact[email]"
          placeholder="{{ section.settings.newsletter_placeholder | default: 'Your Email Address' }}"
          required
        >
        <button type="submit">{{ section.settings.newsletter_button_text | default: 'SUBSCRIBE' }}</button>
      </form>
      <div class="subscribe-agreement">
        <input type="checkbox" id="privacy-agree-{{ section.id }}" required>
        <label for="privacy-agree-{{ section.id }}">
          {{- section.settings.privacy_text | default: 'BY SUBSCRIBING YOU AGREE TO THE PRIVACY POLICY' -}}
        </label>
      </div>
    </div>
    <div class="subscribe-links">
      <a href="{{ section.settings.terms_url | default: '#' }}">
        {{- section.settings.terms_text | default: 'TERMS & CONDITIONS' -}}
      </a>
      <a href="{{ section.settings.privacy_url | default: '#' }}">
        {{- section.settings.privacy_text_link | default: 'PRIVACY' -}}
      </a>
    </div>
  </div>
</footer>

